generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "mysql"
}

model User {
    id        String   @id @default(uuid())
    email     String   @unique
    name      String?
    password  String
    updated_at DateTime @default(now())
    created_at DateTime @default(now())
    posts     Post[]
    @@map("users")
}

model Post {
    id        String   @id @default(uuid())
    title     String
    content   String?
    updated_at DateTime @default(now())
    created_at DateTime @default(now())
    author    User     @relation(fields: [authorId], references: [id])
    authorId  String
    @@map("posts")
}
