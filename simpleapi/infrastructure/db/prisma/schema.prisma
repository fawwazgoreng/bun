generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model user {
  id        Int        @unique @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  token     token[]
  todolists todolist[]
}

model token {
  id         Int       @unique @default(autoincrement())
  token      String
  created_at DateTime?
  updated_at DateTime?
  user       user?     @relation(fields: [userId], references: [id])
  userId     Int?
}

model todolist {
  id      Int      @unique @default(autoincrement())
  name    String
  tanggal DateTime
  user    user?    @relation(fields: [userId], references: [id])
  userId  Int?
}
